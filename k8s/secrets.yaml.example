apiVersion: v1
kind: Secret
metadata:
  name: model-deployment-secrets
  labels:
    app: model-deployment-api
type: Opaque
stringData:
  # AWS Credentials (use AWS IAM roles for pods in production - IRSA)
  # For tutorial purposes, you can use access keys, but in production use IAM roles
  AWS_ACCESS_KEY_ID: "your-access-key-id"
  AWS_SECRET_ACCESS_KEY: "your-secret-access-key"
  AWS_REGION: "eu-central-1"
  
  # S3 Configuration
  S3_BUCKET: "your-s3-bucket-name"
  S3_MODEL_PATH: "models/model.txt"
  
  # CloudWatch Configuration
  ENABLE_CLOUDWATCH: "true"
  CLOUDWATCH_LOG_GROUP: "model-deployment-tutorial"
  
  # Athena Configuration
  ATHENA_DATABASE: "ml_tutorial"
  ATHENA_TABLE: "model_predictions"
  ATHENA_S3_OUTPUT: "s3://your-bucket/athena-results/"
  
  # Model Configuration
  MODEL_PATH: "model.txt"
  
  # Application Configuration
  ENVIRONMENT: "prod"
  DEBUG: "false"

